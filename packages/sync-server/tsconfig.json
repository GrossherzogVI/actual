{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2021"],
    "noEmit": false,
    "outDir": "build",
    "plugins": [{ "name": "typescript-strict-plugin", "path": ["."] }]
  },
  "include": [
    "src/**/*",
    "migrations/**/*",
    "types/**/*",
    "app.ts",
    "bin/**/*"
  ],
  "exclude": ["node_modules", "build", "coverage"]
}
